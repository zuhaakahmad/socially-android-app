<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Status bar -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>

    <!-- Camera preview -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"
        android:layout_above="@id/cameraControls"
        android:scaleType="centerCrop"
        android:src="@drawable/story_craig_coffee" />

    <!-- Top controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBar"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_close" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/flashBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_sticker" />

        <TextView
            android:id="@+id/photoCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/counter_background"
            android:padding="8dp"
            android:text="17 / 22"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/gridBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_grid_filled" />

    </LinearLayout>

    <!-- Camera modes -->
    <LinearLayout
        android:id="@+id/cameraModes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cameraControls"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/typeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="TYPE"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/liveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="LIVE"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/normalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="NORMAL"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/boomerangBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="BOOMERANG"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/superBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUPER"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Bottom camera controls -->
    <LinearLayout
        android:id="@+id/cameraControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <ImageView
            android:id="@+id/galleryBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/highlight_1_kyan" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/captureBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_camera_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/flipBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_flip_camera" />

    </LinearLayout>

    <!-- Bottom indicator -->
    <View
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/socially_primary" />

</RelativeLayout>